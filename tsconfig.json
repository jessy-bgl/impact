{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "paths": {
      "@domain/*": ["./src/domain/*"],
      "@common/*": ["./src/common/*"],
      "@view/*": ["./src/view/*"],
      "@data/*": ["./src/data/*"],
      "@srctypes/*": ["./src/types/*"],
      "@assets/*": ["./assets/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
