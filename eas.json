{
  "cli": {
    "version": ">= 8.0.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "autoIncrement": true
    },
    "preview": {
      "distribution": "internal",
      "autoIncrement": true
    },
    "production": {
      "distribution": "store",
      "autoIncrement": true,
      "android": { "image": "latest" }
    }
  },
  "submit": {
    "preview": { "android": { "track": "internal" } },
    "production": { "android": { "track": "beta" } }
  }
}
